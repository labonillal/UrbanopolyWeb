extends layout

block content
	div.container
		#header-2
			#title
				a(href="/profile")
					img(src='/images/title.png')
			#user
				img(src= user_pic)
				p #{user_name}
				a(href="/logout")
					p Logout
		ol(class="breadcrumb")
			li
				a(href="/profile") Home
			li(class="active") Leaderboard
		#content
			div(class="panel panel-default")
				div(class="panel-heading")
					img(src='/images/title_leaderboard.png')
				div(class="panel-body")
					table(class="table table-hover")
						each entry, i in leaderboard
							tr
								td
									if entry.rank == 1
										img(src='/images/leaderboard_first.png')
									if entry.rank == 2
										img(src='/images/leaderboard_second.png')
									if entry.rank == 3
										img(src='/images/leaderboard_third.png')
								td
									h4 #{entry.rank}. #{entry.playerName}
								td
									img(src= "/images/euro_symbol.png")
								td
									h4 #{entry.Money}
								td
									img(src= "/images/venue_small.png")
								td
									h4 #{entry.numVenue}
								td
									h4(style="text-align: right") #{entry.heritage}&euro;

	div.container
		#footer-score
			div(id="footer")
				div.container
					p #{user_numVenues}
					img(src= "/images/venue_small.png")
					p #{user_cash}
					img(src= "/images/euro_symbol.png")